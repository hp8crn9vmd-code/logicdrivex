---
import SiteLayout from "../layouts/SiteLayout.astro";
import { offers } from "../data/offers";

const pageTitle = "LogicDriveX — Offers";
---
<SiteLayout title={pageTitle} lang="en">
  <main class="min-h-screen p-6">
    <div class="max-w-6xl mx-auto">

      <header class="rounded-2xl border border-slate-200 p-6">
        <h1 class="text-3xl font-bold">LogicDriveX</h1>
        <p class="mt-2 text-slate-700">
          Choose an offer. Each offer has a dedicated landing page and a real request-quote flow.
        </p>
        <p class="mt-3 text-sm text-slate-600">
          Note: This site intentionally avoids fake claims (no testimonials, no fabricated metrics). Scope is explicit.
        </p>
      </header>

      <section class="mt-10 grid gap-6 md:grid-cols-3">
        {offers.map((offer) => (
          <article class="rounded-2xl border border-slate-200 p-6 bg-white">
            <div class="flex items-start justify-between gap-4">
              <h2 class="text-xl font-bold leading-tight">{offer.name}</h2>
            </div>

            <div class="mt-4">
              <h3 class="text-sm font-semibold text-slate-800">Technologies</h3>
              <ul class="mt-2 list-disc list-inside text-slate-700">
                {offer.technologies.map((t) => <li>{t}</li>)}
              </ul>
            </div>

            <div class="mt-4">
              <h3 class="text-sm font-semibold text-slate-800">Deliverables (summary)</h3>
              <ul class="mt-2 list-disc list-inside text-slate-700">
                {offer.deliverables.slice(0, 3).map((d) => <li>{d}</li>)}
              </ul>
              {offer.deliverables.length > 3 && (
                <p class="mt-2 text-sm text-slate-600">
                  Full deliverables are listed on the offer page.
                </p>
              )}
            </div>

            <div class="mt-6 grid gap-3">
              <a
                class="inline-block text-center rounded-xl bg-slate-900 text-white px-4 py-3 font-semibold"
                href={`/landing/${offer.slug}`}
              >
                View offer details
              </a>

              <a
                class="inline-block text-center rounded-xl border border-slate-300 px-4 py-3 font-semibold"
                href={`/request-quote?offer=${offer.id}`}
              >
                Request a quote
              </a>
            </div>
          </article>
        ))}
      </section>

      <footer class="mt-10 text-sm text-slate-600">
        <p>© {new Date().getFullYear()} LogicDriveX</p>
      </footer>

    </div>
  </main>
</SiteLayout>
